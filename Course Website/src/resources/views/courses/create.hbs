<div class="mt-4">
    <h3>Đăng khoá học</h3>
    <form method="post" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input type="text" class="form-control" name="name" placeholder="Tên khoá học">
        </div>
        <div class="form-group">
            <label for="name">Mô tả</label>
            <textarea class="form-control" name="description"placeholder="Mô tả"></textarea>
        </div>
        <div class="form-group">
            <label for="name">Video Id</label>
            <input type="text" class="form-control" name="videoId" placeholder="Video Id">
        </div>
        <div class="form-group">
            <label for="name">Level</label>
            <input type="text" class="form-control" name="level" placeholder="Level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khoá học</button>
</form>
</div>